<resources>
    <!-- Base application theme. -->
    <style name="Theme.EducationSupport" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/urbanist</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">@font/urbanist</item>
    </style>

    <style name="CircularDeterminateProgressBar">
        <item name="android:indeterminateOnly">false </item>
        <item name="android:progressDrawable">@drawable/progress_bar_circle</item>
        <item name="android:fontFamily">@font/urbanist</item>
    </style>

    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:buttonBarPositiveButtonStyle">@style/MyAlertDialogButtonStyle</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/MyAlertDialogButtonStyle</item>
        <item name="android:buttonBarNeutralButtonStyle">@style/MyAlertDialogButtonStyle</item>
        <item name="android:fontFamily">@font/urbanist</item>

    </style>

    <style name="MyAlertDialogButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">@font/urbanist</item>
    </style>

</resources>